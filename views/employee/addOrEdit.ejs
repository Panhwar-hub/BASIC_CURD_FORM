<body  class="container bg-info">
    <h3><%=viewTitle%></h3>
    <input type="hidden" name="_id" value="<%= employee._id%>">
    <form  action="/employee" method="post" autocomplete="off" >
        
        <div class="form-group">
            <label for="text">FullName:</label>
            <input type="text" name="fullname" class="form-control" placeholder="Full Name" value="<%= employee.fullname%>">           
        <div class="text-danger">
            <%= employee.fullNameError%>
        </div>
        </div>
        <div class="form-group">
            <label for="text">Email:</label>
            <input type="email" name="email" class="form-control" placeholder="Email" value="<%= employee.name%>" >           
        <div class="text-danger">
            <%= employee.EmailError%>
        </div>
        </div>
        <div class="form-row">
        <div class="form-group col-md-6">
            <label for="text">Mobile:</label>
            <input type="text" name="number" class="form-control" placeholder="Mobile" >           
        </div>
        <div class="form-group col-md-6">
            <label for="text">City:</label>
            <input type="text" name="city" class="form-control" placeholder="City" >           
        </div>
    </div>
        <div class="form-group">
            <button type="submit" class="btn btn-info"><i class="fa fa-database"></i> Submit</button>
            <a href="employee/list" class="btn btn-info"><i class="fa fa-list"></i> View All</a>
        </div>
    </form>
</body>
</html>