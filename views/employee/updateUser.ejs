<body  class="container bg-info">
    <h3><%=viewTitle%></h3>
    <input type="hidden" name="_id" value="<%= employee._id%>">
    <form  action="/employee" method="post" autocomplete="off" >
        <div class="form-row">
            <div class="form-group col-md-4">                
                <img src="C:\Users\Parvez Ali\OneDrive\Desktop\cirtificate\PicsArt_03-10-07.42.54.jpg" alt="Image">         
            </div>
            <div class="form-group col-md-8">
                <div class="form-row">
                    <div class="form-group col-md-4">
                        
                            <label for="text">FullName:</label>
                            <input type="text" name="fullname" class="form-control" placeholder="Full Name" value="<%= employee.fullname%>">           
                        <div class="text-danger">
                            <%= employee.fullNameError%>
                        </div>                                 
                    </div>
                    <div class="form-group col-md-4">                    
                        <label for="text">Email:</label>
                        <input type="email" name="email" class="form-control" placeholder="Email" value="<%= employee.name%>" >           
                    <div class="text-danger">
                        <%= employee.EmailError%>
                    </div>           
                </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-4">
                        <label for="text">Phone Number:</label>
                        <input type="text" name="mobile" class="form-control" placeholder="Phone Number" >           
                    </div>
                    <div class="form-group col-md-4">
                        <label for="text">Country:</label>
                        <input type="text" name="country" class="form-control" placeholder="Country" >           
                    </div>
                </div>
                
                <div class="form-row">
                    <div class="form-group col-md-4">
                        <label for="text">state:</label>
                        <input type="text" name="state" class="form-control" placeholder="State" >           
                    </div>
                    <div class="form-group col-md-4">
                        <label for="text">city:</label>
                        <input type="text" name="city" class="form-control" placeholder="city" >           
                    </div>
                </div>

                
                <div class="form-row">
                    <div class="form-group col-md-4">
                        <label for="text">Address:</label>
                        <input type="text" name="address" class="form-control" placeholder="Address" >           
                    </div>
                    <div class="form-group col-md-4">
                        <label for="text">ZipCode:</label>
                        <input type="text" name="zip" class="form-control" placeholder="Zip code" value="<%= employee.zipcode%>">           
                    </div>
                </div>
            </div>
            <button class="btn btn-secondary">Update User</button>
            <a href="employee/list" class="btn btn-info"><i class="fa fa-list"></i> View Table</a>
        </div>
       
    </form>
</body>
</html>